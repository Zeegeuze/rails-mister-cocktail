<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>

<h2>This are the ingredients for <%= @cocktail.name %>:</h2>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li> <%= dose.description %>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <%= link_to "Delete", cocktail_dose_path(dose), method: 'delete' %>
  </li>
  </ul>
<% end %>


<%= simple_form_for [@cocktail, @dose] do |c| %>
  <%= c.input :description %>
  <%= c.association :ingredients %>
  <%= c.submit "add a dose", class: "btn btn-primary" %>
<% end %>
